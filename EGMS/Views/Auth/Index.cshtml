@model EGMS.Models.User
@{
    ViewData["Title"] = "My Profile";
}


    <div class="row justify-content-center">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-circle me-2"></i>
                        My Profile
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-user me-2"></i>Full Name
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-at me-2"></i>Username
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.Username</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-envelope me-2"></i>Email Address
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-phone me-2"></i>Phone Number
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.Number</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-building me-2"></i>Company Name
                                </label>
                                <p class="form-control-plaintext border-bottom">@Model.CompanyName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">
                                    <i class="fas fa-user-tag me-2"></i>Role
                                </label>
                                <p class="form-control-plaintext border-bottom">
                                    <span class="badge bg-@(Model.Role == "SuperAdmin" ? "danger" : "info") fs-6">
                                        @Model.Role
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Password Management Section -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card password-section">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0 text-dark">
                                        <i class="fas fa-shield-alt me-2"></i>
                                        Password Management
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <a href="@Url.Action("ResetPassword", "Auth")" class="btn btn-warning w-100">
                                                <i class="fas fa-key me-2"></i>Reset Password
                                            </a>
                                            <small class="text-muted d-block mt-1">Change your current password</small>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <a href="@Url.Action("ForgotPassword", "Auth")" class="btn btn-info w-100">
                                                <i class="fas fa-question-circle me-2"></i>Forgot Password
                                            </a>
                                            <small class="text-muted d-block mt-1">Reset via email verification</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a href="@Url.Action("Edit", "Auth")" class="btn btn-outline-primary me-md-2">
                                    <i class="fas fa-edit me-2"></i>Edit Profile
                                </a>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                                </a>
                            </div>
                        </div>
                    </div>
                </div>    
    </div>


<style>
    .form-control-plaintext {
        border-bottom: 1px solid #dee2e6 !important;
        padding-bottom: 0.375rem;
        margin-bottom: 0.5rem;
        background: transparent;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .text-muted {
        font-size: 0.9rem;
    }

    .badge {
        font-size: 0.8rem !important;
    }

    .password-section {
        border: 1px solid #e9ecef;
        border-radius: 8px;
        background: #f8f9fa;
    }

        .password-section .card-header {
            background: #e9ecef !important;
            border-radius: 8px 8px 0 0 !important;
            border-bottom: 1px solid #dee2e6;
        }

        .password-section .card-body {
            background: white;
            border-radius: 0 0 8px 8px;
        }

    .btn-warning {
        background: linear-gradient(135deg, #ffc107, #ff9800);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #ffb300, #f57c00);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
        }

    .btn-info {
        background: linear-gradient(135deg, #17a2b8, #007bff);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #138496, #0056b3);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(23, 162, 184, 0.4);
        }

    .btn-outline-primary {
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        }

    .btn-secondary {
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
        }

    small.text-muted {
        font-size: 0.75rem;
        font-style: italic;
    }

    .password-section .card-body .row .col-md-6 {
        margin-bottom: 1rem;
    }

    
</style>