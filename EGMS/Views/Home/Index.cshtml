@model IEnumerable<EGMS.DTOs.CustomerDTO>

@{
    ViewData["Title"] = "Customers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Customers</h2>
        <a asp-action="Create" asp-controller="Customer" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Customer
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Father's Name</th>
                            <th>Mother's Name</th>
                            <th>Address</th>
                            <th>Mobile</th>
                            <th>NID Number</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@customer.C_ID</td>
                                    <td>@(customer.Name ?? "N/A")</td>
                                    <td>@(customer.F_name ?? "N/A")</td>
                                    <td>@(customer.M_name ?? "N/A")</td>
                                    <td>@(customer.Address ?? "N/A")</td>
                                    <td>@(customer.Mobile_number ?? "N/A")</td>
                                    <td>@(customer.NID_Number ?? "N/A")</td>
                                    <td>@(customer.Created_Date.ToString("dd/MM/yyyy"))</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@customer.C_ID" class="btn btn-info btn-sm" title="View Details">
                                                <i class="fas fa-eye"></i>Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@customer.C_ID" class="btn btn-warning btn-sm" title="Edit">
                                                <i class="fas fa-edit"></i>Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@customer.C_ID" class="btn btn-danger btn-sm" title="Delete">
                                                <i class="fas fa-trash"></i>Delete
                                            </a>
                                        </div>

                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    <i class="fas fa-users fa-2x mb-2"></i><br />
                                    No customers found. Start by adding your first customer.
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
