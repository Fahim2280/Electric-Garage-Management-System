@model IEnumerable<EGMS.DTOs.CustomerDTO>
@{
    ViewData["Title"] = "Customers";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Customers</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Customer
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Father</th>
                                <th>Mother</th>
                                <th>Address</th>
                                <th>Mobile</th>
                                <th>NID</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@customer.C_ID</td>
                                    <td>@customer.Name</td>
                                    <td>@customer.F_name</td>
                                    <td>@customer.M_name</td>
                                    <td>@customer.Address</td>
                                    <td>@customer.Mobile_number</td>
                                    <td>@customer.NID_Number</td>
                                    <td>@customer.Created_Date.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal_@customer.C_ID">
                                                <i class="fas fa-edit"></i>
                                            </button>

                                            <a asp-action="Details" asp-route-id="@customer.C_ID" class="btn btn-info btn-sm" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <form asp-action="DeleteConfirmed" asp-controller="Customer" asp-route-id="@customer.C_ID" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this customer?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>

                                        <!-- Edit Modal -->
                                        <div class="modal fade" id="editModal_@customer.C_ID" tabindex="-1" aria-labelledby="editModalLabel_@customer.C_ID" aria-hidden="true">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <form asp-action="Edit" method="post">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Edit Customer</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <input type="hidden" name="C_ID" value="@customer.C_ID" />
                                                            <div class="mb-3">
                                                                <label>Name</label>
                                                                <input type="text" name="Name" value="@customer.Name" class="form-control" required />
                                                            </div>
                                                            <div class="mb-3">
                                                                <label>Father's Name</label>
                                                                <input type="text" name="F_name" value="@customer.F_name" class="form-control" />
                                                            </div>
                                                            <div class="mb-3">
                                                                <label>Mother's Name</label>
                                                                <input type="text" name="M_name" value="@customer.M_name" class="form-control" />
                                                            </div>
                                                            <div class="mb-3">
                                                                <label>Address</label>
                                                                <input type="text" name="Address" value="@customer.Address" class="form-control" />
                                                            </div>
                                                            <div class="mb-3">
                                                                <label>Mobile</label>
                                                                <input type="text" name="Mobile_number" value="@customer.Mobile_number" class="form-control" required />
                                                            </div>
                                                            <div class="mb-3">
                                                                <label>NID Number</label>
                                                                <input type="text" name="NID_Number" value="@customer.NID_Number" class="form-control" required />
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-primary">Save</button>
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-users fa-2x mb-2"></i><br />
                    No customers found.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(() => document.querySelectorAll('.alert').forEach(el => el.style.display = 'none'), 5000);
    </script>
}
